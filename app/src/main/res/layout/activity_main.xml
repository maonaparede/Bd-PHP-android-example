<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="397dp"
        android:layout_height="614dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="insertPerfil"
            android:text="Inserir Perfil" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:onClick="deletePerfil"
            android:text="Delete Perfil" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="insertAmigo"
            android:text="Insert Amigo" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:onClick="deleteAmigo"
            android:text="Delete Amigo" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:onClick="insertAfinidade"
            android:text="Insert Afinidade" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="deleteAfinidade"
            android:text="Delete Afinidade" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:onClick="insertMsgUsuario"
            android:text="Insert Mensagem Usuario" />

        <TextView
            android:id="@+id/textView"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:text="READ" />

        <Button
            android:id="@+id/buttono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="telaRead"
            android:text="Read Json" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:text="Update" />

        <Button
            android:id="@+id/button10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="telaUpdate"
            android:text="Update" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>